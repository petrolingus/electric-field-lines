<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.petrolingus.electricfieldlines.Controller">
  <children>
      <VBox maxWidth="300.0" minWidth="300.0" prefWidth="300.0" spacing="8.0">
         <children>
            <TitledPane animated="false" collapsible="false" text="Конфигурация">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <HBox spacing="6.0">
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Показывать" />
                              <CheckBox fx:id="configurationShowCheckBox" mnemonicParsing="false" selected="true" />
                           </children>
                        </HBox>
                        <Label text="Две оркужности" />
                        <Separator prefWidth="200.0" />
                        <HBox spacing="6.0">
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Радиус" />
                              <Slider fx:id="configurationInnerRadiusSlider" blockIncrement="0.1" majorTickUnit="0.2" max="1.0" maxHeight="1.7976931348623157E308" minorTickCount="2" showTickLabels="true" showTickMarks="true" value="0.5" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox spacing="6.0">
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Сдвиг центра" />
                              <Slider fx:id="configurationCenterShiftSlider" blockIncrement="0.1" majorTickUnit="0.2" max="1.0" maxHeight="1.7976931348623157E308" minorTickCount="2" showTickLabels="true" showTickMarks="true" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <HBox spacing="6.0">
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Угол поворота" />
                              <Slider fx:id="configurationClockwiseAngleSlider" blockIncrement="0.1" majorTickUnit="0.2" max="1.0" maxHeight="1.7976931348623157E308" minorTickCount="2" showTickLabels="true" showTickMarks="true" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <Separator prefWidth="200.0" />
                        <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Создать конфигурацию" />
                     </children>
                  </VBox>
               </content>
            </TitledPane>
            <TitledPane animated="false" collapsible="false" text="Триангуляция">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Показывать" />
                              <CheckBox fx:id="triangulationCheckBox" mnemonicParsing="false" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Число точек" />
                              <Slider fx:id="pointsSlider" majorTickUnit="20.0" maxHeight="1.7976931348623157E308" min="20.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" value="40.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
            <TitledPane animated="false" collapsible="false" text="Изолинии">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Показывать" HBox.hgrow="ALWAYS" />
                              <CheckBox fx:id="isolineCheckBox" mnemonicParsing="false" selected="true" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Число линий" HBox.hgrow="ALWAYS" />
                              <Slider fx:id="isolineCountSlider" blockIncrement="5.0" majorTickUnit="15.0" max="50.0" maxHeight="1.7976931348623157E308" min="5.0" minorTickCount="2" showTickLabels="true" showTickMarks="true" value="5.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
            <TitledPane text="Силовое поле">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Показывать" HBox.hgrow="ALWAYS" />
                              <CheckBox fx:id="fieldLineCheckBox" mnemonicParsing="false" selected="true" />
                           </children>
                        </HBox>
                        <HBox>
                           <children>
                              <Label maxWidth="100.0" minWidth="100.0" prefWidth="100.0" text="Число линий" HBox.hgrow="ALWAYS" />
                              <Slider fx:id="fieldLineCountSlider" blockIncrement="150.0" majorTickUnit="300.0" max="1000.0" maxHeight="1.7976931348623157E308" min="100.0" minorTickCount="2" showTickLabels="true" showTickMarks="true" value="100.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </TitledPane>
            <TitledPane animated="false" collapsible="false" text="Распределение потенциала">
               <content>
                  <VBox spacing="8.0">
                     <children>
                        <HBox spacing="6.0">
                           <children>
                              <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Показывать" HBox.hgrow="ALWAYS" />
                              <CheckBox fx:id="pointsCheckBox" mnemonicParsing="false" selected="true" />
                           </children>
                        </HBox>
                        <RadioButton fx:id="luDecompositionRadio" mnemonicParsing="false" text="LU Decomposition">
                           <toggleGroup>
                              <ToggleGroup fx:id="decompositionGroup" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="qrDecompositionRadio" mnemonicParsing="false" selected="true" text="QR Decomposition" toggleGroup="$decompositionGroup" />
                        <RadioButton fx:id="rrqrDecompositionRadio" mnemonicParsing="false" text="RRQR Decomposition" toggleGroup="$decompositionGroup" />
                        <Button fx:id="button" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onFindSolution" text="Рассчитать" />
                     </children>
                  </VBox>
               </content>
            </TitledPane>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <StackPane>
         <children>
          <Canvas fx:id="canvas" height="900.0" width="900.0" />
            <ProgressIndicator fx:id="progressIndicator" progress="0.0" visible="false" />
         </children>
      </StackPane>
  </children>
</HBox>
